<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_toggle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="4"
            android:text="Toggle Notification : Disabled"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Switch
            android:id="@+id/switch_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_setdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_toggle"
        android:orientation="horizontal">
    <Button
        android:id="@+id/button_setdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_setdate"
        android:layout_weight="1"
        android:enabled="false"/>
    <EditText
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
    android:id="@+id/valider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_setdate"
    android:text="@string/valider"
    android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/a_propos"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>